<Window x:Class="MSSS_app_ASS_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSSS_app_ASS_1"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="297*"/>
        </Grid.RowDefinitions>
        <xctk:IntegerUpDown x:Name="Sigma" FormatString="N0" Value="10" Increment="1" Maximum="200000" Margin="10,10,705,71"/>
        <xctk:IntegerUpDown x:Name="Mu" FormatString="N0" Value="50" Increment="1" Maximum="200000" Margin="130,10,585,71" RenderTransformOrigin="0.959,0.488"/>
        <ListView x:Name="CombinedA_B_Listview" Margin="10,98,0,28" HorizontalAlignment="Left" Panel.ZIndex="-4" Width="205" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="SensorA" Width="100" DisplayMemberBinding="{Binding DisplaySensorA}" />
                    <GridViewColumn Header="SensorB" Width="100" DisplayMemberBinding="{Binding DisplaySensorB}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListBox x:Name="SensorA_Listbox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="374,55,324,21" Grid.RowSpan="2"/>
        <Label Content="Sensor A" HorizontalAlignment="Left" Height="34" Margin="234,16,0,0" VerticalAlignment="Top" Width="126" FontSize="20"/>
        <ListBox x:Name="SensorB_Listbox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="644,55,54,21" Grid.RowSpan="2"/>
        <Label Content="Sensor B" HorizontalAlignment="Left" Height="34" Margin="512,16,0,0" VerticalAlignment="Top" Width="126" FontSize="20"/>
        <Button x:Name="Load_Sensor_Data" Content="Load Sensor Data" HorizontalAlignment="Left" Margin="62,66,0,0" VerticalAlignment="Top" Height="32" Width="102" Click="Display_Click" RenderTransformOrigin="-0.131,0.47"/>
        <Button x:Name="Binary_Search_Iterative_SensorA" Content="Binary search (iterative)" HorizontalAlignment="Left" Margin="229,52,0,0" VerticalAlignment="Top" Click="Iterative_SensorA" Grid.Row="1"/>
        <Button x:Name="Binary_Search_Iterative_SensorB" Content="Binary search (iterative)" HorizontalAlignment="Left" Margin="497,52,0,0" VerticalAlignment="Top" Click="Iterative_SensorB" Grid.Row="1"/>
        <Button x:Name="Binary_Search_Recursive_SensorA" Content="Binary search (Recursive)" HorizontalAlignment="Left" Margin="225,165,0,0" VerticalAlignment="Top" Click="Recursive_SensorA" Grid.Row="1"/>
        <Button x:Name="Binary_Search_Recursive_SensorB" Content="Binary search (Recursive)" HorizontalAlignment="Left" Margin="493,165,0,0" VerticalAlignment="Top" Click="Recursive_SensorB" Grid.Row="1"/>
        <Button x:Name="Selection_sort_SensorA" Content="Selection Sort " HorizontalAlignment="Left" Margin="252,66,0,0" VerticalAlignment="Top" Click="Selection_SensorA"/>
        <Button x:Name="Selection_sort_SensorB" Content="Selection Sort " HorizontalAlignment="Left" Margin="520,66,0,0" VerticalAlignment="Top" Click="Selection_SensorB"/>
        <Button x:Name="Insertion_sort_SensorA" Content="Insertion sort" HorizontalAlignment="Left" Margin="252,120,0,0" VerticalAlignment="Top" Click="Insertion_SensorA" Grid.RowSpan="2"/>
        <Button x:Name="Insertion_sort_SensorB" Content="Insertion sort" HorizontalAlignment="Left" Margin="523,120,0,0" VerticalAlignment="Top" Click="Insertion_SensorB" Grid.RowSpan="2"/>
        <TextBox x:Name="Binary_Search_Iterative_sensorA" HorizontalAlignment="Left" Height="18" Margin="227,88,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="130" RenderTransformOrigin="0.775,0.678" Grid.Row="1"/>
        <TextBox x:Name="Binary_Search_Recursive_sensorA" HorizontalAlignment="Left" Height="18" Margin="227,197,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="133" Grid.Row="1"/>
        <TextBox x:Name="Binary_Search_Iterative_sensorB" HorizontalAlignment="Left" Height="18" Margin="497,88,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="130" RenderTransformOrigin="0.775,0.678" Grid.Row="1"/>
        <TextBox x:Name="Binary_Search_Recursive_sensorB" HorizontalAlignment="Left" Height="18" Margin="493,197,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="130" RenderTransformOrigin="0.775,0.678" Grid.Row="1"/>

    </Grid>
</Window>
